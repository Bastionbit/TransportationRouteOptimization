@{
    ViewBag.Title = "Error";
    ViewBag.ShowTitle = false;
}

<div class="error-page">
    <h2 class="headline text-red">500</h2>

    <div class="error-content">
        <h3><i class="fa fa-warning text-red"></i> ¡Ups! Algo fue mal.</h3>

        <p>
            Hubo un problema procesando la solicitud. Por favor, vuelve a intentarlo.<br>
            Si el problema persiste, contacte con un administrador.
        </p>

        <a href="@Url.Action("Index", "Home")" class="btn btn-default" role="button">Inicio</a>
    </div>
</div>
@model ElGatoMensajero.Models.sedes

@{
    ViewBag.Title = "Añadir Sede";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="add-sede">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Añadir Sede</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body register-data">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-6 padding-15">
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.provincia, new { htmlAttributes = new { @class = "form-control", placeholder = "Provincia", rel = "tooltip", title = "Introduce la Provincia" } })
                                <span class="fa fa-globe form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.provincia, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.localidad, new { htmlAttributes = new { @class = "form-control", placeholder = "Localidad", rel = "tooltip", title = "Introduce la Localidad" } })
                                <span class="fa fa-globe form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.localidad, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.cp, new { htmlAttributes = new { @class = "form-control", placeholder = "Código Postal", rel = "tooltip", title = "Introduce el Código Postal" } })
                                <span class="fa fa-envelope form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.cp, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6 padding-15">
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.calle, new { htmlAttributes = new { @class = "form-control", placeholder = "Calle", rel = "tooltip", title = "Introduce la Calle" } })
                                <span class="fa fa-home form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.calle, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.num, new { htmlAttributes = new { @class = "form-control", placeholder = "Número", rel = "tooltip", title = "Introduce el Número" } })
                                <span class="fa fa-hashtag form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.num, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control", placeholder = "Teléfono", rel = "tooltip", title = "Introduce el Teléfono de Contacto" } })
                                <span class="fa fa-hashtag form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="text-center">
                            <input type="submit" value="Añadir" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<div>
    @Html.ActionLink("Volver", "Index")
</div>
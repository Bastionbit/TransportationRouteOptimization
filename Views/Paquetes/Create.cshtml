@model ElGatoMensajero.Models.paquetes

@{
    ViewBag.Title = "Añadir Paquete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="add-packet">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Añadir Paquete</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body register-data">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-6 padding-15">
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.peso, new { htmlAttributes = new { @class = "form-control", placeholder = "Peso", rel = "tooltip", title = "Introduce el Peso" } })
                                <span class="fa fa-balance-scale form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.peso, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.dimensiones, new { htmlAttributes = new { @class = "form-control", placeholder = "Dimensiones", rel = "tooltip", title = "Introduce las Dimensiones" } })
                                <span class="fa fa-arrows-h form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.dimensiones, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.nombreOrigen, new { htmlAttributes = new { @class = "form-control", placeholder = "Remitente", rel = "tooltip", title = "Introduce el Remitente" } })
                                <span class="fa fa-user form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.nombreOrigen, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.codPostalOrigen, new { htmlAttributes = new { @class = "form-control", placeholder = "Código Postal Remitente", rel = "tooltip", title = "Introduce el Código Postal del Remitente" } })
                                <span class="fa fa-envelope form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.codPostalOrigen, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.direccionOrigen, new { htmlAttributes = new { @class = "form-control", placeholder = "Dirección Remitente", rel = "tooltip", title = "Introduce la Dirección del Remitente" } })
                                <span class="fa fa-home form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.direccionOrigen, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6 padding-15">
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.tlOrigen, new { htmlAttributes = new { @class = "form-control", placeholder = "Teléfono Remitente", rel = "tooltip", title = "Introduce el Teléfono del Remitente" } })
                                <span class="fa fa-phone form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.tlOrigen, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.nombreDestino, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre Receptor", rel = "tooltip", title = "Introduce el Receptor" } })
                                <span class="fa fa-user form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.nombreDestino, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.codPostalDestino, new { htmlAttributes = new { @class = "form-control", placeholder = "Código Postal Receptor", rel = "tooltip", title = "Introduce el Código Postal del Receptor" } })
                                <span class="fa fa-envelope form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.codPostalDestino, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.direccionDestino, new { htmlAttributes = new { @class = "form-control", placeholder = "Dirección Receptor", rel = "tooltip", title = "Introduce la Dirección del Receptor" } })
                                <span class="fa fa-home form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.direccionDestino, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group has-feedback">
                                @Html.EditorFor(model => model.tlDestino, new { htmlAttributes = new { @class = "form-control", placeholder = "Teléfono Receptor", rel = "tooltip", title = "Introduce el Teléfono del Receptor" } })
                                <span class="fa fa-phone form-control-feedback"></span>
                                @Html.ValidationMessageFor(model => model.tlDestino, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="text-center">
                            <input type="submit" value="Añadir" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<div>
    @Html.ActionLink("Volver", "Index")
</div>
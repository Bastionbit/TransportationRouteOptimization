@{
    ViewBag.Title = "No encontrado";
    ViewBag.ShowTitle = false;
}

<div class="error-page">
    <h2 class="headline text-red">404</h2>

    <div class="error-content">
        <h3><i class="fa fa-warning text-red"></i> Página no encontrada</h3>

        <p>
            La página que estas buscando no se ha podido encontrar. Por favor, vuelve a intentarlo.<br>
            Si el problema persiste, contacte con un administrador.
        </p>

        <a href="@Url.Action("Index", "Home")" class="btn btn-default" role="button">Inicio</a>
    </div>
</div>